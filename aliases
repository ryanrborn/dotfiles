# webdev macros
alias webserver="sudo systemctl start nginx && sudo systemctl start php-fpm && sudo systemctl start mysqld"
mkmod() {
	for i
	do mkdir $i
		mkdir $i/view
		mkdir $i/provider
		mkdir $i/controller
		mkdir $i/resource
		mkdir $i/scss
		touch $i/view/empty
		touch $i/provider/empty
		touch $i/controller/empty
		touch $i/resource/empty
		touch $i/scss/empty
	done
}
alias httpgrp="sudo chgrp -R http ."

# I don't want to use vi
alias vi="vim"

# tools
alias less="less -r"
pngreduce() {
	pngcrush -reduce -brute $1 dest.png
	mv dest.png $1
}

# what was already here and is nice to have
alias grep='grep --color=tty -d skip'
alias cp="cp -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -h'                      # human-readable sizes
alias np='nano PKGBUILD'
alias fixit='sudo rm -f /var/lib/pacman/db.lck && sudo pacman-mirrors -g && sudo pacman -Syyuu  && 
sudo pacman -Suu'

# background images
background() {
	back=$(xfconf-query --channel xfce4-desktop --property /backdrop/screen0/monitorHDMI-$1/workspace0/last-image)
	viewnior $back
}

